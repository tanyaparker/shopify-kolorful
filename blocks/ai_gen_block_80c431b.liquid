{% doc %}
  @prompt
    I want a small video and text section. The video should be portrait (think at home iphone video) with the ability to control the size and layout of the video uploaded. The video should be able to be resized from the upload to match the display area on the section., Can you add the ability to upload video instead of only links?, The video isn't playing or showing up. can you fix? liquid error, Can you have the ability for the user to unmute the video?
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-text-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-text-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    gap: {{ block.settings.content_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
    flex-direction: {% if block.settings.layout == 'video_left' %}row{% else %}row-reverse{% endif %};
  }

  .ai-video-wrapper-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.video_width }}%;
    max-width: {{ block.settings.video_width }}%;
  }

  .ai-video-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.video_max_width }}px;
    margin: 0 {% if block.settings.layout == 'video_left' %}0{% else %}auto{% endif %} 0 {% if block.settings.layout == 'video_left' %}auto{% else %}0{% endif %};
    aspect-ratio: 9 / 16;
    border-radius: {{ block.settings.video_border_radius }}px;
    overflow: hidden;
    background-color: #000000;
  }

  .ai-video-element-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.video_fit }};
  }

  .ai-video-mute-button-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    right: 20px;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.6);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
    z-index: 10;
  }

  .ai-video-mute-button-{{ ai_gen_id }}:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }

  .ai-video-mute-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    fill: #ffffff;
  }

  .ai-video-mute-icon-{{ ai_gen_id }} {
    display: none;
  }

  .ai-video-mute-icon-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-video-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-text-wrapper-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-text-content-{{ ai_gen_id }} {
    max-width: 600px;
    margin: 0 {% if block.settings.layout == 'video_left' %}0{% else %}auto{% endif %} 0 {% if block.settings.layout == 'video_left' %}auto{% else %}0{% endif %};
  }

  .ai-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-text-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-video-text-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-video-wrapper-{{ ai_gen_id }} {
      flex: 0 0 100%;
      max-width: 100%;
    }

    .ai-video-container-{{ ai_gen_id }} {
      max-width: {{ block.settings.mobile_video_max_width }}px;
      margin: 0 auto;
    }

    .ai-text-content-{{ ai_gen_id }} {
      margin: 0;
    }

    .ai-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<video-text-section-{{ ai_gen_id }} class="ai-video-text-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-text-container-{{ ai_gen_id }}">
    <div class="ai-video-wrapper-{{ ai_gen_id }}">
      <div class="ai-video-container-{{ ai_gen_id }}">
        {% if block.settings.video != blank %}
          <video
            class="ai-video-element-{{ ai_gen_id }}"
            {% if block.settings.autoplay %}autoplay{% endif %}
            {% if block.settings.loop %}loop{% endif %}
            muted
            {% if block.settings.controls %}controls{% endif %}
            playsinline
            data-video-element
          >
            {% for source in block.settings.video.sources %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endfor %}
            Your browser does not support the video tag.
          </video>
          
          {% if block.settings.show_mute_button %}
            <button class="ai-video-mute-button-{{ ai_gen_id }}" aria-label="Toggle sound" data-mute-button>
              <svg class="ai-video-mute-icon-{{ ai_gen_id }} active" data-muted-icon xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
              </svg>
              <svg class="ai-video-mute-icon-{{ ai_gen_id }}" data-unmuted-icon xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
              </svg>
            </button>
          {% endif %}
        {% else %}
          <div class="ai-video-placeholder-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
            <div class="ai-video-empty-state-{{ ai_gen_id }}">
              Upload a portrait video
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-text-wrapper-{{ ai_gen_id }}">
      <div class="ai-text-content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="ai-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</video-text-section-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoTextSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.video = this.querySelector('[data-video-element]');
        this.muteButton = this.querySelector('[data-mute-button]');
        this.mutedIcon = this.querySelector('[data-muted-icon]');
        this.unmutedIcon = this.querySelector('[data-unmuted-icon]');

        if (this.muteButton && this.video) {
          this.muteButton.addEventListener('click', this.toggleMute.bind(this));
        }
      }

      toggleMute() {
        if (this.video.muted) {
          this.video.muted = false;
          this.mutedIcon.classList.remove('active');
          this.unmutedIcon.classList.add('active');
          this.muteButton.setAttribute('aria-label', 'Mute video');
        } else {
          this.video.muted = true;
          this.mutedIcon.classList.add('active');
          this.unmutedIcon.classList.remove('active');
          this.muteButton.setAttribute('aria-label', 'Unmute video');
        }
      }
    }

    customElements.define('video-text-section-{{ ai_gen_id }}', VideoTextSection{{ ai_gen_id }});
  })();
</script>

