{% doc %}
  @prompt
    create a section that has 3 custom icon ability with text underneath (horizontal). The text should have heading and then regular font. Allow the background of this section to change, Can you have this section have an overall title?, Can you have the text portions have the ability to adjust the text? For example: bold, number, etc.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-features-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-icon-features__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-icon-features__title-{{ ai_gen_id }} {
    text-align: center;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
  }

  .ai-icon-features__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-icon-features__item-{{ ai_gen_id }} {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-icon-features__icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-bottom: {{ block.settings.icon_spacing }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-icon-features__icon-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-icon-features__icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-icon-features__icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-icon-features__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px;
    font-weight: 600;
  }

  .ai-icon-features__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-icon-features__text-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-icon-features__text-{{ ai_gen_id }} strong {
    font-weight: 600;
  }

  .ai-icon-features__text-{{ ai_gen_id }} em {
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-features__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.column_gap | times: 1.5 }}px;
    }

    .ai-icon-features__icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-icon-features__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-icon-features__grid-{{ ai_gen_id }} {
      gap: {{ block.settings.column_gap | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-icon-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-features__container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <h2 class="ai-icon-features__title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
    {% endif %}

    <div class="ai-icon-features__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign icon_key = 'icon_' | append: i
          assign heading_key = 'heading_' | append: i
          assign text_key = 'text_' | append: i

          assign icon = block.settings[icon_key]
          assign heading = block.settings[heading_key]
          assign text = block.settings[text_key]
        %}

        <div class="ai-icon-features__item-{{ ai_gen_id }}">
          <div class="ai-icon-features__icon-wrapper-{{ ai_gen_id }}">
            {% if icon %}
              <img
                src="{{ icon | image_url: width: 400 }}"
                alt="{{ heading | escape }}"
                loading="lazy"
                width="400"
                height="400"
              >
            {% else %}
              <div class="ai-icon-features__icon-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          {% if heading != blank %}
            <h3 class="ai-icon-features__heading-{{ ai_gen_id }}">{{ heading }}</h3>
          {% endif %}

          {% if text != blank %}
            <div class="ai-icon-features__text-{{ ai_gen_id }}">{{ text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

