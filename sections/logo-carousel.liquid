{% if section.blocks.size > 0 %}
<div class="page-width">

  <div class="logo-carousel_wrap">
    
    {% assign i = 0 %}
    {% for block in section.blocks %}
      {% assign i = i | plus: 1 %}
      <div class="logo_block logo_block{{ i }}">
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" target="_blank" title="">
        {% endif %}
          <img loading="lazy" src="{{ block.settings.logo | img_url: 'master' }}" alt="{{ block.settings.logo.alt }}">
        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}

  </div>
  
</div>
{% endif %}


{% schema %}
  {
    "name": "Logo Carousel",
    "class": "logo-carousel",
    "settings": [
    ], 
    "blocks": [
      {
        "type": "img_block",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo Carousel",
        "category": "Custom"
      }
    ]
  }
{% endschema %}