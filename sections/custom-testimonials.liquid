{%- style -%}
  .testimonials-{{ section.id }} .page-width {
    background-color: #eff4ee;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    /* background-image: url({{ section.settings.pc_back | img_url: 'master' }}); */
  }
  

  {%- if block.settings.mob_back != blank -%}
    @media screen and (max-width: 767px) {
      .testimonials-{{ section.id }} .page-width {
        background-color: #eff4ee;
        /* background-url: url({{ section.settings.mob_back | img_url: 'master' }}); */
      }      
    }
  {%- endif -%}
  {%- if section.settings.custom_font == 'heading' -%}
    #shopify-section-{{ section.id }} .testimonials-section .cus_heading {
      font-family:var(--typeHeaderPrimary), var(--typeHeaderFallback);
    }
  {%- elsif section.settings.custom_font == 'body' -%}
    #shopify-section-{{ section.id }} .testimonials-section .cus_heading {
      font-family:var(--typeBasePrimary), var(--typeBaseFallback);
    }
  {%- elsif section.settings.custom_font == 'custom' -%}
    #shopify-section-{{ section.id }} .testimonials-section .cus_heading {
      font-family: 'Friendly Schoolmates';
    }
  {%- elsif section.settings.custom_font == 'custom-new' -%}
    #shopify-section-{{ section.id }} .testimonials-section .cus_heading {
      font-family: 'Times Sans Serif';
    }
  {%- endif -%}
  {%- if section.settings.custom_font_text == 'heading' -%}
    #shopify-section-{{ section.id }} .testimonials-slider__text .rte-setting {
      font-family:var(--typeHeaderPrimary), var(--typeHeaderFallback);
    }
  {%- elsif section.settings.custom_font_text == 'body' -%}
    #shopify-section-{{ section.id }} .testimonials-slider__text .rte-setting {
      font-family:var(--typeBasePrimary), var(--typeBaseFallback);
    }
  {%- elsif section.settings.custom_font_text == 'custom' -%}
    #shopify-section-{{ section.id }} .testimonials-slider__text .rte-setting {
      font-family: 'Friendly Schoolmates';
    }
  {%- elsif section.settings.custom_font_text == 'custom-new' -%}
    #shopify-section-{{ section.id }} .testimonials-slider__text .rte-setting {
      font-family: 'Times Sans Serif';
    }
  {%- endif -%}
  {%- if section.settings.custom_font_author == 'heading' -%}
    #shopify-section-{{ section.id }} .testimonials_meta {
      font-family:var(--typeHeaderPrimary), var(--typeHeaderFallback);
    }
  {%- elsif section.settings.custom_font_author == 'body' -%}
    #shopify-section-{{ section.id }} .testimonials_meta {
      font-family:var(--typeBasePrimary), var(--typeBaseFallback);
    }
  {%- elsif section.settings.custom_font_author == 'custom' -%}
    #shopify-section-{{ section.id }} .testimonials_meta {
      font-family: 'Friendly Schoolmates';
    }
  {%- elsif section.settings.custom_font_author == 'custom-new' -%}
    #shopify-section-{{ section.id }} .testimonials_meta {
      font-family: 'Times Sans Serif';
    }
  {%- endif -%}
  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .testimonials-section .cus_heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px !important;
    }
    #shopify-section-{{ section.id }} .testimonials-slider__text .rte-setting {
      font-size: {{ section.settings.content_font_size_mobile }}px !important;
    }
    #shopify-section-{{ section.id }} .testimonials_meta {
      font-size: {{ section.settings.author_font_size_mobile }}px !important;
      line-height: 16.1px;
    }
  }
  @media only screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .testimonials-section .cus_heading {
      font-size: {{ section.settings.heading_font_size_laptop }}px !important;
    }
    #shopify-section-{{ section.id }} .testimonials-slider__text .rte-setting {
      font-size: {{ section.settings.content_font_size_laptop }}px !important;
    }
    #shopify-section-{{ section.id }} .testimonials_meta {
      font-size: {{ section.settings.author_font_size_laptop }}px !important;
    }
    #shopify-section-{{ section.id }} .flickity-viewport {
      height: 280px !important;
    }
  }
  @media only screen and (min-width: 1600px) {
    #shopify-section-{{ section.id }} .testimonials-section .cus_heading {
      font-size: {{ section.settings.heading_font_size_desktop }}px !important;
    }
    #shopify-section-{{ section.id }} .testimonials-slider__text .rte-setting {
      font-size: {{ section.settings.content_font_size_desktop }}px !important;
    }
    #shopify-section-{{ section.id }} .testimonials_meta {
      font-size: {{ section.settings.author_font_size_desktop }}px !important;
    }
  }
{%- endstyle -%}

<div
  class="testimonials-section testimonials-{{ section.id }}{% if section.settings.color_background == settings.color_body_bg %} testimonials-section--with-divider{% endif %} text-{{ section.settings.align_text }}"
  data-section-id="{{ section.id }}"
  data-section-type="testimonials"
  data-aos>

  <div class="page-width">

    <div class="testimonials-section_inner">
      {%- if section.settings.title != blank -%}    
        <div class="section-header">
          <h2 class="cus_heading">{{ section.settings.title | escape }}</h2>
        </div>
      {%- endif -%}  
  
      {%- if section.blocks.size > 0 -%}
        <div class="slideshow-wrapper">
          <div
            class="testimonials-slider"
            id="Testimonials-{{ section.id }}"
            data-dots="true"
            data-count="{{ section.blocks.size }}">
            {%- for block in section.blocks -%}
              <div
                class="testimonials-slide testimonials-slide--{{ block.id }}"
                data-index="{{ forloop.index0 }}"
                data-aos="row-of-{{ section.blocks.size }}"
                {{ block.shopify_attributes }}>
                <blockquote class="testimonials-slider__text">
                  {%- if block.settings.icon == 'quote' -%}
                    <span class="quote-icon"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-quote" viewBox="0 0 41 35"><path d="M10.208 17.711h6.124v16.332H0V21.684C0 8.184 5.444.956 16.332 0v6.125c-4.083 1.14-6.124 4.414-6.124 9.82v1.766zm24.498 0h6.124v16.332H24.498V21.684C24.498 8.184 29.942.956 40.83 0v6.125c-4.083 1.14-6.124 4.414-6.124 9.82v1.766z" fill="#000" fill-rule="evenodd" /></svg></span>
                  {%- elsif block.settings.icon == '5-stars' -%}
                    <span class="testimonial-stars testimonial-stars5">★★★★★</span>
                  {%- elsif block.settings.icon == '4-stars' -%}
                    <span class="testimonial-stars testimonial-stars4">★★★★</span>
                  {%- elsif block.settings.icon == '3-stars' -%}
                    <span class="testimonial-stars testimonial-stars3">★★★</span>
                  {%- elsif block.settings.icon == '2-stars' -%}
                    <span class="testimonial-stars testimonial-stars2">★★</span>
                  {%- elsif block.settings.icon == '1-star' -%}
                    <span class="testimonial-stars testimonial-stars1">★</span>
                  {%- endif -%}
    
                  {%- if block.settings.testimonial != blank -%}
                    <div class="rte-setting text-spacing">{{ block.settings.testimonial }}</div>
                  {%- endif -%}
    
                  <div class="testimonials_meta">    
                    {%- if block.settings.author != blank -%}
                      <cite>{{ block.settings.author | escape }}</cite>                    
                      {%- if block.settings.author_info != blank -%}
                        <div class="testimonials__info">&nbsp;|&nbsp;{{ block.settings.author_info | escape }}</div>
                      {%- endif -%}
                    {%- endif -%}
                  </div>
                </blockquote>
              </div>
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
                      
  </div>
                    
</div>

