{% if section.blocks.size > 0 %}
<div class="guarantee-section_inner">
  {%- style -%}
        #shopify-section-{{ section.id }} .guarantee_block h4 {
          color: #54504A;
        }
        #shopify-section-{{ section.id }} .guarantee_block p {
          line-height: unset;
          font-weight: 500;
          color: #54504ACC;
          letter-spacing: unset;
        }
      {%- if section.settings.custom_font == 'heading' -%}
        #shopify-section-{{ section.id }} .guarantee_block h4 {
          font-family:var(--typeHeaderPrimary), var(--typeHeaderFallback);
        }
      {%- elsif section.settings.custom_font == 'body' -%}
        #shopify-section-{{ section.id }} .guarantee_block h4 {
          font-family:var(--typeBasePrimary), var(--typeBaseFallback);
        }
      {%- elsif section.settings.custom_font == 'custom' -%}
        #shopify-section-{{ section.id }} .guarantee_block h4 {
          font-family: 'Avenir Regular';
        }
      {%- elsif section.settings.custom_font == 'custom-new' -%}
        #shopify-section-{{ section.id }} .guarantee_block h4 {
          font-family: 'Antipasto Regular';
        }
      {%- endif -%}
      {%- if section.settings.custom_font_content == 'heading' -%}
        #shopify-section-{{ section.id }} .guarantee_block p {
          font-family:var(--typeHeaderPrimary), var(--typeHeaderFallback);
        }
      {%- elsif section.settings.custom_font_content == 'body' -%}
        #shopify-section-{{ section.id }} .guarantee_block p {
          font-family:var(--typeBasePrimary), var(--typeBaseFallback);
        }
      {%- elsif section.settings.custom_font_content == 'custom' -%}
        #shopify-section-{{ section.id }} .guarantee_block p {
          font-family: 'Avenir Regular';
        }
      {%- endif -%}
      @media screen and (max-width: 767px) {
        #shopify-section-{{ section.id }} .guarantee_block h4 {
          font-size: {{ section.settings.heading_font_size_mobile }}px !important;
          line-height: 20.7px;
          margin-bottom: 15px;
        }
        #shopify-section-{{ section.id }} .guarantee_block p {
          font-size: {{ section.settings.content_font_size_mobile }}px !important;
          line-height: 16.8px;
          letter-spacing: 2px;
        }
      }
      @media only screen and (min-width: 768px) {
        #shopify-section-{{ section.id }} .guarantee_block h4 {
          font-size: {{ section.settings.heading_font_size_laptop }}px !important;
        }
        #shopify-section-{{ section.id }} .guarantee_block p {
          font-size: {{ section.settings.content_font_size_laptop }}px !important;
        }
      }
      @media only screen and (min-width: 1600px) {
        #shopify-section-{{ section.id }} .guarantee_block h4 {
          font-size: {{ section.settings.heading_font_size_desktop }}px !important;
        }
        #shopify-section-{{ section.id }} .guarantee_block p {
          font-size: {{ section.settings.content_font_size_desktop }}px !important;
        }
      }
  {%- endstyle -%}
  <div class="page-width">
  
    <div class="guarantee-wrap">
      
      {% assign i = 0 %}
      {% for block in section.blocks %}
        {% assign i = i | plus: 1 %}
        <div class="guarantee_block guarantee_block{{ i }}">
          <div class="guarantee_block_inner">
            <div class="guarantee_img_wrap">
              <img loading="lazy" src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.icon.alt }}">
            </div>
            <h4 class="cus_heading">{{ block.settings.heading }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
  
    </div>
    
  </div>

</div>

<style>  
  .guarantee-section_inner .page-width {
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    background-color: #F3F0EC;
    /* background-image: url({{ section.settings.pc_back | img_url: 'master' }}); */
  }

  {%- if section.settings.mob_back != blank -%}
    @media screen and (max-width: 767px) {
      .guarantee-section_inner .page-width {
        /* background-image: url({{ section.settings.mob_back | img_url: 'master' }}); */
        background-color: #F3F0EC;
        margin-top: 100px;
        padding: 0;
      }
    }
  {%- endif -%}
</style>
{% endif %}


{% schema %}
  {
    "name": "Guarantee Section",
    "class": "guarantee-section",
    "settings": [
      {
        "type": "header",
        "content": "Style"
      },
      {
        "type": "select",
        "id": "custom_font",
        "label": "Title Font Family",
        "default": "custom",
        "options": [
          {
            "value": "heading",
            "label": "Heading"
          },
          {
            "value": "body",
            "label": "Body"
          },
          {
            "value": "custom",
            "label": "Avenir Regular"
          },
          {
            "value": "custom-new",
            "label": "Antipasto Regular"
          }
        ]
      },
      {
        "type": "select",
        "id": "custom_font_content",
        "label": "Content Font Family",
        "default": "body",
        "options": [
          {
            "value": "heading",
            "label": "Heading"
          },
          {
            "value": "body",
            "label": "Body"
          },
          {
            "value": "custom",
            "label": "Avenir Regular"
          },
          {
            "value": "custom-new",
            "label": "Antipasto Regular"
          }
        ]
      },
      {
        "type": "range",
        "id": "heading_font_size_desktop",
        "label": "Desktop | Title Font Size",
        "default": 32,
        "min": 5,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "heading_font_size_laptop",
        "label": "Laptop | Title Font Size",
        "default": 32,
        "min": 5,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "heading_font_size_mobile",
        "label": "Mobile | Title Font Size",
        "default": 32,
        "min": 5,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "content_font_size_desktop",
        "label": "Desktop | Content Font Size",
        "default": 16,
        "min": 5,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "content_font_size_laptop",
        "label": "Laptop | Content Font Size",
        "default": 15,
        "min": 5,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "content_font_size_mobile",
        "label": "Mobile | Content Font Size",
        "default": 14,
        "min": 5,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "image_picker",
        "id": "pc_back",
        "label": "Desktop Background"
      },
      {
        "type": "image_picker",
        "id": "mob_back",
        "label": "Mobile Background"
      }
    ], 
    "blocks": [
      {
        "type": "text_block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Guarantee Section",
        "category": "Custom"
      }
    ]
  }
{% endschema %}