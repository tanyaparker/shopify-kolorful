<style>
.collection-grid-section {
  margin: 0 auto;
  padding: 100px 0 0 0;
}

@media only screen and (max-width: 768px) {
  .collection-grid-section {
    padding: 40px 0 0 0;
  }
  .collection-grid-section .section-header {
    margin-bottom: 20px;
  }
  .custom-collection-grid-wrapper.page-width {
    padding: 0 15px 40px 15px;
  }
}

.section-header {
  margin-bottom: 40px;
  text-align: center;
}

.section-header__title {
  margin-bottom: 0;
  font-family: var(--typeHeaderPrimary), var(--typeHeaderFallback);
}

.collection-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 30px;
  /* padding: 0 30px; */
  width: 100%;
}

.collection-grid__item {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  min-height: 320px;
  flex: 0 0 calc(100% / {{ section.settings.items_per_row_desktop }} - (30px * ({{ section.settings.items_per_row_desktop }} - 1) / {{ section.settings.items_per_row_desktop }}));
  max-width: calc(100% / {{ section.settings.items_per_row_desktop }} - (30px * ({{ section.settings.items_per_row_desktop }} - 1) / {{ section.settings.items_per_row_desktop }}));
}

.desktop-row-3 .collection-grid__item {
  min-height: 240px;
}  

@media only screen and (max-width: 768px) {
  .collection-grid {
    gap: 20px;
    padding: 0 15px;
  }

  .desktop-row-3 .collection-grid__item {
    min-height: 175px;
  }  
  
  .collection-grid__item {
    min-height: 175px;
    flex: 0 0 calc(100% / {{ section.settings.items_per_row_mobile }} - (20px * ({{ section.settings.items_per_row_mobile }} - 1) / {{ section.settings.items_per_row_mobile }}));
    max-width: calc(100% / {{ section.settings.items_per_row_mobile }} - (20px * ({{ section.settings.items_per_row_mobile }} - 1) / {{ section.settings.items_per_row_mobile }}));
  }
}

.collection-grid__link {
  display: block;
  position: relative;
  height: 100%;
  color: inherit;
  text-decoration: none;
}

.collection-grid__content {
  position: absolute;
  z-index: 2;
  padding: 30px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.collection-grid__text-wrapper {
  max-width: 100%;
}

.collection-grid__title {
  margin: 0;
  font-weight: 400;
  line-height: 1.2;
  color: #54504A;
}

.collection-grid__button {
  display: inline-block;
  margin-top: 6px;
  font-weight: 400;
  color: #54504A;
  position: relative;
  background: linear-gradient(to right, currentColor, currentColor);
  background-size: 0% 1px;
  background-position: 50% 100%;
  background-repeat: no-repeat;
  transition: color .25s ease-in, background-size .25s ease-in;
}

.collection-grid__item:hover .collection-grid__button {
  background-size: 100% 2px;
}

.collection-grid__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 102%;
  height: 100%;
  background-size: 100% 100%;
  background-position: center;
  transition: transform 0.6s ease;
  z-index: 0;
}

.collection-grid__item:hover .collection-grid__background {
  transform: translateX(-2%);
}

@media only screen and (max-width: 480px) {
  .collection-grid__content {
    padding: 20px;
  }
  .collection-grid__background {
    background-size: 100% 100%;
  }
}

@media only screen and (min-width: 481px) and (max-width: 768px) {
  .collection-grid__item {
    min-height: 320px;
  }

  .collection-grid__background {
    background-size: 100%;
  }
  
  .collection-grid__content {
    padding: 20px;
  }
}
  
@media only screen and (max-width: 691px) and (orientation: landscape) {
  .collection-grid__background {
    background-size: 100%;
  }

  .collection-grid__item {
    min-height: 240px;
  }

  .desktop-row-3 .collection-grid__item {
    min-height: 240px;
  }
}  
  
@media only screen and (min-width: 690px) and (max-width: 990px) and (orientation: landscape) {
