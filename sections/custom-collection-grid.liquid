{% comment %}
  Collection Grid Section
{% endcomment %}
{%- style -%}

{%- liquid
  assign font_all = ''
  assign font_title = ''
  assign font_button = ''

  # --- Font Family (general) ---
  case section.settings.custom_font
    when 'heading'
      assign font_all = 'var(--typeHeaderPrimary), var(--typeHeaderFallback)'
    when 'body'
      assign font_all = 'var(--typeBasePrimary), var(--typeBaseFallback)'
    when 'custom'
      assign font_all = '"Avenir Regular"'
    when 'custom-new'
      assign font_all = '"Antipasto Regular"'
    when 'custom-new1'
      assign font_all = '"Shantine"'
  endcase

  # --- Title Font Family ---
  case section.settings.title_font_family
    when 'heading'
      assign font_title = 'var(--typeHeaderPrimary), var(--typeHeaderFallback)'
    when 'body'
      assign font_title = 'var(--typeBasePrimary), var(--typeBaseFallback)'
    when 'custom'
      assign font_title = '"Avenir Regular"'
    when 'custom-new'
      assign font_title = '"Antipasto Regular"'
    when 'custom-new1'
      assign font_title = '"Shantine"'
  endcase

  # --- Button Font Family ---
  case section.settings.button_font_family
    when 'heading'
      assign font_button = 'var(--typeHeaderPrimary), var(--typeHeaderFallback)'
    when 'body'
      assign font_button = 'var(--typeBasePrimary), var(--typeBaseFallback)'
    when 'custom'
      assign font_button = '"Avenir Regular"'
    when 'custom-new'
      assign font_button = '"Antipasto Regular"'
    when 'custom-new1'
      assign font_button = '"Shantine"'
  endcase
-%}

{%- if font_all != blank -%}
  /* Font Family */
  #shopify-section-{{ section.id }} {
    font-family: {{ font_all }};
  }
{%- endif -%}

{%- if font_title != blank -%}
  /* Title Font Family */
  #shopify-section-{{ section.id }} .section-header__title,
  #shopify-section-{{ section.id }} .collection-grid__title {
    font-family: {{ font_title }};
  }
{%- endif -%}

{%- if font_button != blank -%}
  /* Button Font Family */
  #shopify-section-{{ section.id }} .collection-grid__button {
    font-family: {{ font_button }};
  }
{%- endif -%}




  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .section-header__title {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }
    #shopify-section-{{ section.id }} .collection-grid__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
    #shopify-section-{{ section.id }} .collection-grid__button {
      font-size: {{ section.settings.button_font_size_mobile }}px;
    }
  }

  @media only screen and (min-width: 768px) and (max-width: 1599px) {
    .hero__top-subtitle {
      font-size: {{ section.settings.slider_subheading_font_size }}px;
      line-height: {{ section.settings.slider_subheading_line_height }}px;
    }
    
    #shopify-section-{{ section.id }} .section-header__title {
      font-size: {{ section.settings.heading_font_size_laptop }}px;
    }
    #shopify-section-{{ section.id }} .collection-grid__title {
      font-size: {{ section.settings.title_font_size_laptop }}px;
    }
    #shopify-section-{{ section.id }} .collection-grid__button {
      font-size: {{ section.settings.button_font_size_laptop }}px;
    }
  }

  @media only screen and (min-width: 1600px) {
    #shopify-section-{{ section.id }} .collection-grid__title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
    }
    #shopify-section-{{ section.id }} .collection-grid__button {
      font-size: {{ section.settings.button_font_size_desktop }}px;
    }
    #shopify-section-{{ section.id }} .section-header__title {
      font-size: {{ section.settings.heading_font_size_desktop }}px;
    }
  }
{%- endstyle -%}

<div class="collection-grid-section desktop-row-{{ section.settings.items_per_row_desktop }} mobile-row-{{ section.settings.items_per_row_mobile }}" 
     id="CollectionGrid--{{ section.id }}"
     data-section-id="{{ section.id }}"
     data-section-type="collection-grid">
  
  {%- if section.settings.title_enable -%}
    <header class="section-header">
      <{{ section.settings.heading_type }} class="section-header__title cus_heading">{{ section.settings.top_subheading }}</{{ section.settings.heading_type }}>
    </header>
  {%- endif -%}

  <div class="collection-grid">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'collection' %}
          {%- assign collection = collections[block.settings.collection] -%}
          {%- assign collection_title = block.settings.custom_title | default: collection.title -%}
          
          <div class="collection-grid__item" {{ block.shopify_attributes }}>
            <a href="{% if block.settings.custom_link != blank %}{{ block.settings.custom_link }}{% else %}{{ collection.url }}{% endif %}" 
               class="collection-grid__link">
              <div class="collection-grid__content">
                <div class="collection-grid__text-wrapper text-{{ section.settings.text_alignment }}">
                  <h3 class="collection-grid__title">
                    {{ collection_title }}
                  </h3>
                  
                  {% if block.settings.button_label != blank %}
                    <div class="collection-grid__button">
                      {{ block.settings.button_label }}
                    </div>
                  {% endif %}
                </div>
              </div>
              {% assign placeholder_image = 'https://cdn.shopify.com/s/files/1/0587/6396/8710/files/Gown.webp?v=1748265800' %}
              {% assign bg_image = block.settings.background_image | image_url %}
              {% if bg_image == blank %}
                {% assign bg_image = placeholder_image %}
              {% endif %}
              <div class="collection-grid__background" style="background-image: url('{{ bg_image }}');"></div>
            </a>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

